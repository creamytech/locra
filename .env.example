# Shopify Storefront API Configuration
# Copy this file to .env.local and fill in your values

# Your Shopify store domain (e.g., your-store.myshopify.com)
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=

# Storefront API access token (from Shopify Admin > Apps > Headless)
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=

# API Version (optional - defaults to 2024-01)
NEXT_PUBLIC_SHOPIFY_API_VERSION=2024-01

# App URL for OAuth callbacks (must be HTTPS in production)
NEXT_PUBLIC_APP_URL=https://localhost:3000

# ===========================================
# CUSTOMER ACCOUNT API (OAuth Authentication)
# ===========================================

# Customer Account API Client ID (from Shopify Admin > Settings > Customer accounts)
SHOPIFY_CUSTOMER_ACCOUNT_API_CLIENT_ID=

# Customer Account API URL (format: https://shopify.com/<shop_id>)
# Find this in Shopify Admin > Settings > Customer accounts > Customer Account API
SHOPIFY_CUSTOMER_ACCOUNT_API_URL=

# ===========================================
# LOYALTY SYSTEM (Atlas Travel Club)
# ===========================================

# PostgreSQL Database URL (from Vercel/Supabase)
POSTGRES_URL=

# Shopify Webhook Secret (from Shopify Admin > Settings > Notifications > Webhooks)
SHOPIFY_WEBHOOK_SECRET=

# Shopify Admin API Token (optional - for discount code creation)
# SHOPIFY_ADMIN_ACCESS_TOKEN=

